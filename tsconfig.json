{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared/*": [ "src/app/shared/*"],
      "@core/*": [ "src/app/core/*"],
      "@app/*": [ "src/app/*"],
      "@backend/*": [ "src/app/backend/*"],
      "@environment/*": [ "src/environments/*"],
      "@pages/*": [ "src/app/pages/*"],
      "@layouts/*": [ "src/app/core/layouts/*"]
    }
  }
}
